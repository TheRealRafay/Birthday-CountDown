<!DOCTYPE html>
<html>
<head>
  <title>Birthday Countdown</title>
  <style>
    body { font-family: Arial; text-align: center; margin-top: 50px; background: #000000; }
    #countdown { font-size: 30px; color: #ffffff; }
    h1{
        color: #FFD700;
    }
    h3{
        color: #FFD700;
    }
  </style>
</head>
<body>
  <h1>Abdur Rafay's Birthday is in!</h1>
  <div id="countdown"></div>
  <h3>Sabr Karo Bhai itni bhi kya jaldi h!!!!!!!!!</h3>

  <script>
    // Set birthday date
    const birthday = new Date("August 16, 2025 00:00:00").getTime();

    // Update countdown every second
    const timer = setInterval(function() {
      const now = new Date().getTime();
      const distance = birthday - now;

      const days = Math.floor(distance / (1000 * 60 * 60 * 24));
      const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
      const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
      const seconds = Math.floor((distance % (1000 * 60)) / 1000);

      document.getElementById("countdown").innerHTML = 
        days + "d " + hours + "h " + minutes + "m " + seconds + "s ";

      if (distance < 0) {
        clearInterval(timer);
        document.getElementById("countdown").innerHTML = "Happy Birthday!";
      }
    }, 1000);
  </script>
</body>
</html>
